name: Run Python Automation

on:
  push:
    branches:
      - main  # or your default branch

jobs:
  run-script:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: 3.11

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install boto3

      - name: Run AWS Resource Checker
        run: python week07-CICD-fundamentals/day1-cicd-fundamentals/scripts/aws_resource_checker.py
